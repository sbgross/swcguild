@model SWCLMS.UI.Models.UserDetailsToEditVM


@{
    ViewBag.Title = "Index";
}


<body>
    <h2>User Details</h2>
    
    <div class="row">
        <div class="col-xs-12">
            @Html.ActionLink("search for users", "Search", "Admin")
        </div>

        <div>
            @using (Html.BeginForm("GetUserDetails", "Admin")) //, FormMethod.Post))
            {
                @Html.HiddenFor(u => u.UserDetailsToEdit.UserID)
                <p>
                    <label>Last Name</label>
                    <p>@Html.TextBoxFor(u => u.UserDetailsToEdit.LastName)</p>
                </p>

                <p>
                    <label>First Name</label>
                    <p>@Html.TextBoxFor(u => u.UserDetailsToEdit.FirstName)</p>                    
                </p>

                <p>
                    <label>Grade Level</label>
                    @Html.DropDownListFor(u => u.UserDetailsToEdit.GradeLevelID, Model.GradeLevels, new { @class = "form-control" })
                </p>

                <p>
                    <label>User Name</label>
                    <p>@Html.DisplayFor(u => u.UserDetailsToEdit.Email)</p>
                </p>

                <p>
                    <label>Suggested Role</label>
                    <p>@Html.DisplayFor(u => u.UserDetailsToEdit.SuggestedRole)</p>
                </p>

                <p>
                    <label>Roles</label>
                </p>

                @*<p>                    
                    @Html.CheckBoxFor()           
                </p>*@

            @*<form action="">
                    <input type="radio" name="role" value="Admin">Admin<br>
                    <input type="radio" name="role" value="Teacher">Teacher<br>
                    <input type="radio" name="role" value="Student">Student<br>
                    <input type="radio" name="role" value="Parent">Parent<br>
                </form>*@

                @Html.ActionLink("cancel", "index", "admin")
                <button class="btn btn-primary">Save</button>
            }
        </div>
    </div>
</body>