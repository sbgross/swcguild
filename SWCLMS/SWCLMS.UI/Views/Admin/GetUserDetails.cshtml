@*@using SWCLMS.UI.Models*@
@model SWCLMS.UI.Models.UserDetailsToEditVM


@{
    ViewBag.Title = "GetUserDetails";
}

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <h2>User Details</h2>
        @using (Html.BeginForm("GetUserDetails", "Admin"))
        {
            @Html.HiddenFor(u => u.UserDetailsToEdit.UserID)            
            <div class="form-group">
                <label>Last Name</label>
                <p>@Html.TextBoxFor(u => u.UserDetailsToEdit.LastName)</p>
            </div>

            <div class="form-group">
                <label>First Name</label>
                <p>@Html.TextBoxFor(u => u.UserDetailsToEdit.FirstName)</p>
            </div>

            <div class="form-group">
                <label>Grade Level</label>
                @Html.DropDownListFor(u => u.UserDetailsToEdit.GradeLevelID, Model.GradeLevels, "N/A", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>User Name</label>
                <p>@Html.DisplayFor(u => u.UserDetailsToEdit.Email)</p>
            </div>

            <div class="form-group">
                <label>Suggested Role</label>
                <p>@Html.DisplayFor(u => u.UserDetailsToEdit.SuggestedRole)</p>
            </div>

            @Html.HiddenFor(u => u.UserDetailsToEdit.ID)
            <div class="form-group">
                <label>Roles</label>
                <p>
                    @for (int i = 0; i < Model.SelectedRoles.Count; i++)
                    {
                    <p>
                        @Html.CheckBoxFor(m => m.SelectedRoles[i].CheckedStatus)
                        <span>@Model.SelectedRoles[i].RoleName</span>
                        @Html.HiddenFor(m => m.SelectedRoles[i].RoleName)
                        @Html.HiddenFor(m => m.SelectedRoles[i].RoleID)
                    </p>
                    }
                </p>
            </div>

            @Html.ActionLink("cancel", "index", "admin")
            <button class="btn btn-primary">Save</button>
        }
    </div>
</div>
